@model RestaurantManagement.Models.MenuItem

@{
    ViewData["Title"] = "Xóa Món";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Xóa Món</h1>

<h3>Bạn có chắc chắn muốn xóa món này không?</h3>

<div>
    <h4>Thông Tin Món</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Món
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>

        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            Ngày Cập Nhật
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

        <dt class="col-sm-2">
            Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1, h3 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h4 {
            color: #5f3812;
            font-size: 24px;
        }

        dt {
            font-weight: bold;
            color: #5f3812;
        }

        dd {
            background-color: #fff;
            border: 1px solid #cea377;
            padding: 8px;
            border-radius: 5px;
        }

        .btn {
            border-radius: 8px;
            font-size: 16px;
            padding: 10px 20px;
            margin: 5px;
        }

        .btn-danger {
            background-color: #d84f2b;
            color: white;
        }

            .btn-danger:hover {
                background-color: #5f3812;
            }

        .btn-secondary {
            background-color: #cea377;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #d84f2b;
            }

        hr {
            border-top: 2px solid #5f3812;
        }

        .row {
            margin-bottom: 20px;
        }
    </style>
