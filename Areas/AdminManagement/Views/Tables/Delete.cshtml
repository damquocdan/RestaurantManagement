@model RestaurantManagement.Models.Table

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Xóa Bàn</h1>

<h3>Bạn có chắc chắn muốn xóa bàn này không?</h3>
<div>
    <h4>Thông Tin Bàn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatingCapacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatingCapacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TableId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Trở Lại Danh Sách</a>
    </form>
</div>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h3 {
            color: #5f3812;
            text-align: center;
            font-size: 24px;
            font-weight: 600;
        }

        h4 {
            color: #5f3812;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
        }

        dl {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 600px;
        }

        dt {
            font-weight: bold;
            color: #5f3812;
        }

        dd {
            margin-bottom: 10px;
            color: #333;
        }

        .btn {
            font-size: 14px;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-danger {
            background-color: #d84f2b;
            color: white;
        }

            .btn-danger:hover {
                background-color: #5f3812;
            }

        .btn-secondary {
            background-color: #cea377;
            color: #5f3812;
        }

            .btn-secondary:hover {
                background-color: #d84f2b;
                color: white;
            }
    </style>
