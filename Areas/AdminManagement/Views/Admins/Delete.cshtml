@model RestaurantManagement.Models.Admin

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}
<style>
    body {
        background-color: #f6c728;
        font-family: Arial, sans-serif;
    }

    h1, h3 {
        color: #5f3812;
        font-size: 2rem;
    }

    h4 {
        color: #5f3812;
        font-size: 1.5rem;
    }

    dt {
        font-weight: bold;
        color: #5f3812;
    }

    dd {
        font-size: 1rem;
        color: #5f3812;
    }

    form {
        margin-top: 20px;
    }

    input[type="submit"] {
        background-color: #d84f2b;
        color: white;
        padding: 10px 15px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        border-radius: 4px;
    }

        input[type="submit"]:hover {
            background-color: #5f3812;
        }

    a {
        color: #5f3812;
        font-size: 1rem;
        text-decoration: none;
    }

        a:hover {
            color: #d84f2b;
            text-decoration: underline;
        }

    hr {
        border-top: 2px solid #5f3812;
    }

    .text-danger {
        color: #d84f2b;
    }

    dl.row {
        margin-bottom: 20px;
    }

</style>
<h1>Xóa Quản Trị Viên</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Thông Tin Quản Trị Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

