@model RestaurantManagement.Models.Category

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <h4>Thông Tin Danh Mục</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Mô Tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            Ngày Cập Nhật
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
    </form>
</div>


    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1, h3, h4 {
            color: #5f3812;
        }

        h1 {
            font-size: 2.5rem;
        }

        h3 {
            font-size: 1.8rem;
            font-weight: bold;
        }

        h4 {
            font-size: 1.6rem;
            margin-top: 20px;
        }

        dl {
            background-color: #cea377;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
            color: #5f3812;
            font-size: 1.1rem;
        }

        dd {
            font-size: 1.1rem;
            color: #5f3812;
        }

        .btn {
            text-decoration: none;
            padding: 0.5rem 1.5rem;
            border-radius: 4px;
            margin-right: 10px;
            font-size: 1rem;
        }

        .btn-danger {
            background-color: #d84f2b;
            border-color: #d84f2b;
            color: white;
        }

        .btn-secondary {
            background-color: #5f3812;
            border-color: #5f3812;
            color: white;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .col-sm-2 {
            font-weight: bold;
            color: #5f3812;
        }

        .col-sm-10 {
            color: #5f3812;
        }

        .text-danger {
            color: #d84f2b;
        }
    </style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
