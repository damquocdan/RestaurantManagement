@model IEnumerable<RestaurantManagement.Models.Admin>

@{
    ViewData["Title"] = "Danh Sách Quản Trị Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}
<style>
    body {
        background-color: #f6c728;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #5f3812;
        font-size: 2.5rem;
    }

    h4 {
        color: #5f3812;
        font-size: 1.5rem;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #cea377;
        color: #5f3812;
        font-weight: bold;
    }

    td {
        background-color: #ffffff;
    }

    a.btn {
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 1rem;
        text-decoration: none;
        margin: 5px;
    }

    a.btn-success {
        background-color: #5f3812;
        color: white;
    }

    a.btn-warning {
        background-color: #cea377;
        color: white;
    }

    a.btn-info {
        background-color: #d84f2b;
        color: white;
    }

    a.btn-danger {
        background-color: #d84f2b;
        color: white;
    }

    a.btn:hover {
        opacity: 0.8;
    }

    p {
        margin-top: 20px;
    }

    .text-danger {
        color: #d84f2b;
    }

</style>
<h1>Danh Sách Quản Trị Viên</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo Mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-warning">Chỉnh Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-info">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
