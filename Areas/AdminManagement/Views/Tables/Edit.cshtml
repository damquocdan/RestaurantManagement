@model RestaurantManagement.Models.Table

@{
    ViewData["Title"] = "Chỉnh Sửa Bàn";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Chỉnh Sửa Bàn</h1>

<h4>Cập Nhật Thông Tin Bàn</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableId" />

            <div class="form-group">
                <label asp-for="TableNumber" class="control-label">Số Bàn</label>
                <input asp-for="TableNumber" class="form-control" />
                <span asp-validation-for="TableNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeatingCapacity" class="control-label">Sức Chứa</label>
                <input asp-for="SeatingCapacity" class="form-control" />
                <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label">Trạng Thái</label>
                <input asp-for="IsAvailable" class="form-control" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">Ngày Tạo</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label">Ngày Cập Nhật</label>
                <input asp-for="UpdatedAt" class="form-control" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Trở Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h4 {
            color: #5f3812;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            color: #5f3812;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            border: 1px solid #cea377;
            width: 100%;
        }

            .form-control:focus {
                border-color: #d84f2b;
                box-shadow: 0 0 5px rgba(216, 79, 43, 0.5);
            }

        .btn-primary {
            background-color: #d84f2b;
            color: white;
            font-size: 14px;
            padding: 10px 20px;
            border-radius: 5px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #5f3812;
            }

        .btn-secondary {
            background-color: #cea377;
            color: #5f3812;
