@model IEnumerable<RestaurantManagement.Models.Table>

@{
    ViewData["Title"] = "Danh Sách Bàn";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Danh Sách Bàn</h1>
<p>
    <a asp-action="UpdateAll" class="btn btn-primary">Cập nhật</a>
</p>
<p>
    <a asp-action="Create" class="btn btn-primary">Tạo Mới Bàn</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatingCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TableNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatingCapacity)
                </td>
                <td>
                    @if (item.IsAvailable.HasValue && item.IsAvailable.Value)
                    {
                        <span>Còn</span>
                    }
                    else
                    {
                        <span>Trống</span>
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TableId" class="btn btn-warning">Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.TableId" class="btn btn-info">Chi Tiết</a> 
                    <a asp-action="Delete" asp-route-id="@item.TableId" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #5f3812;
            text-align: center;
            font-size: 30px;
            font-weight: 700;
        }

        h4 {
            color: #5f3812;
            font-size: 24px;
            font-weight: 600;
        }

        .btn-primary {
            background-color: #d84f2b;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #5f3812;
            }

        .btn-info {
            background-color: #cea377;
            color: #5f3812;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-info:hover {
                background-color: #d84f2b;
                color: white;
            }

        .btn-warning {
            background-color: #f5a623;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-warning:hover {
                background-color: #5f3812;
            }

        .btn-danger {
            background-color: #d84f2b;
            color: white;
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-danger:hover {
                background-color: #5f3812;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #5f3812;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #cea377;
            color: #5f3812;
        }

        td {
            background-color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f0f0f0;
        }
    </style>