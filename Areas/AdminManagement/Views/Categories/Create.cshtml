@model RestaurantManagement.Models.Category

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Tạo Mới</h1>

<h4>Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên Danh Mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô Tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1, h3, h4 {
            color: #5f3812;
        }

        h1 {
            font-size: 2.5rem;
        }

        h3 {
            font-size: 1.8rem;
            font-weight: bold;
        }

        h4 {
            font-size: 1.6rem;
            margin-top: 20px;
        }

        dl {
            background-color: #cea377;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
            color: #5f3812;
            font-size: 1.1rem;
        }

        dd {
            font-size: 1.1rem;
            color: #5f3812;
        }

        .btn {
            text-decoration: none;
            padding: 0.5rem 1.5rem;
            border-radius: 4px;
            margin-right: 10px;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #d84f2b;
            border-color: #d84f2b;
            color: white;
        }

        .btn-secondary {
            background-color: #5f3812;
            border-color: #5f3812;
            color: white;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .col-sm-2 {
            font-weight: bold;
            color: #5f3812;
        }

        .col-sm-10 {
            color: #5f3812;
        }

        .text-danger {
            color: #d84f2b;
        }
    </style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
