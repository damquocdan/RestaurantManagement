@model RestaurantManagement.Models.Customer

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Xóa Khách Hàng</h1>

<h3>Bạn có chắc chắn muốn xóa không?</h3>

<div>
    <h4>Thông Tin Khách Hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-info">Quay Lại Danh Sách</a>
    </form>
</div>

    <style>
        body {
            background-color: #f6c728;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-size: 2.5rem;
            color: #5f3812;
        }

        h3 {
            font-size: 1.8rem;
            color: #d84f2b;
        }

        h4 {
            font-size: 1.8rem;
            color: #5f3812;
        }

        dl {
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
            color: #5f3812;
        }

        dd {
            margin-bottom: 10px;
            color: #5f3812;
        }

        .btn {
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            margin-right: 10px;
            font-size: 1rem;
            display: inline-block;
            text-align: center;
        }

        .btn-danger {
            background-color: #d84f2b;
            border-color: #d84f2b;
            color: white;
        }

        .btn-info {
            background-color: #5f3812;
            border-color: #5f3812;
            color: white;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .text-danger {
            color: #d84f2b;
        }

        .form-group label {
            font-weight: bold;
            color: #5f3812;
        }

        .form-control {
            border-radius: 4px;
            padding: 10px;
            width: 100%;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
